  <Identity
    Name="9457558b-77d0-43f9-b1e4-e6aa9aba05d6"
    Publisher="CN=alash"
    Version="1.0.0.0" />

  <Properties>
    <DisplayName>MyMediaCollection</DisplayName>
    <PublisherDisplayName>alash</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
